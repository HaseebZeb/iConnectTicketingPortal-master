@model BasketWebPanel.ViewModels.EarninigsListViewModel
@*@using (Ajax.BeginForm("SaveOrderStatuses", "Orders", new AjaxOptions { OnSuccess = "OnSuccessStatusInsertion", OnFailure = "OnFailedInsertion", LoadingElementId = "divLoader" }, new { @Id = "frmOrderStatus" }))
    {*@
<style>
    .hide {
        display: none;
    }

    .table caption + thead tr:first-child th,
    .table colgroup + thead tr:first-child th,
    .table thead:first-child tr:first-child th,
    .table caption + thead tr:first-child td,
    .table colgroup + thead tr:first-child td,
    .table thead:first-child tr:first-child td {
        border-top: 0;
        text-align: center;
    }

</style>
<form data-ajax="true" data-ajax-loading="#divLoader" id="frmOrderStatus" method="post" novalidate="novalidate">

    @Html.AntiForgeryToken()
    <div class="panel-body panel">
        <div class="alert alert-success" id="success-alert" hidden>
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong>Success! </strong><span> </span>
        </div>
        <div class="alert alert-error" id="error-alert" hidden>
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong>Error! </strong> <span> </span>
        </div>
        <div class="x_title">
            <h3 class="pull-left">Orders</h3>
        
            <div class="clearfix"></div>
        </div>
        <div class="">
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                </div>
            </div>
            <div class="row" id="divMain">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_content">
                        <div class="table-responsive" style="overflow-x:auto; overflow-y:hidden">
                            <table id="datatable_Earning" class="table table-striped table-bordered" style="table-layout: auto; text-align:center;">
                                <thead>
                                    <tr>
                                  
                                        <th style="vertical-align:middle">Order No.</th>
                                        <th style="vertical-align:middle">Category Name</th>
                                        <th style="vertical-align:middle">Order Date</th>
                                        <th style="vertical-align:middle">Payment Method</th>
                                        <th style="vertical-align:middle">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                       @foreach (var stat in Model.Statistics)
                                       {
                                        <tr>
                                            <td style="vertical-align:middle">@stat.Id </td>
                                            <td style="vertical-align:middle">@stat.Name </td>
                                            <td style="vertical-align:middle">@String.Format("{0:dddd, MMMM d, yyyy}", stat.OrderDateTime)</td>
                                            <td style="vertical-align:middle">@stat.PaymentMethodName </td>
                                            <td style="vertical-align:middle">@stat.Total </td>
                                        </tr>
                                       }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</form>
<script>

    $(document).ready(function () {

        var table = $('#datatable_Earning').DataTable({
            "pagingType": "full_numbers",
            order: [
                    [0, 'desc']
            ],
            columnDefs: [{
                orderable: false,
                className: 'select-checkbox',
                targets: [1, 2,3]
            }]
        });

    });
      
</script>

