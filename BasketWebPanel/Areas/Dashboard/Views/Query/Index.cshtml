@model BasketWebPanel.ViewModels.UserQueries
@{
    ViewBag.Title = "User Queries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<input id="ImageValue" type="hidden" value="@Model.BannerImage" />*@
<div class="right_col" role="main">
    <div class="row">


        <div class="x_panel ">
            <div class="x_title">
                <h3 class="pull-left">Manage Queries</h3>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsive" style="overflow-x:auto; overflow-y:hidden">
                    <table id="datatable" class="table table-striped table-bordered" style="table-layout: auto; text-align:center;">
                        <thead>
                            <tr>
                                <th style="vertical-align:middle">ID</th>
                                <th style="vertical-align:middle">Full Name</th>
                                <th style="vertical-align:middle">Email</th>
                                <th style="vertical-align:middle">Message</th>
                                <th style="vertical-align:middle">Created Date</th>
                                @*<th style="vertical-align:middle">Status</th>
                                    <th style="vertical-align:middle">Details</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var query in Model.Queries)
                            {
                                <tr>
                                    <td style="vertical-align:middle">@query.Id</td>

                                    <td style="vertical-align:middle">@query.User.FullName</td>
                                    <td style="vertical-align:middle">@query.User.Email</td>
                                    <td style="vertical-align:middle">@query.Description</td>
                                    @*<td style="vertical-align:middle">@String.Format("{0:dddd, MMMM d, yyyy}", @query.CreatedDate)</td>*@
                                    <td style="vertical-align:middle">@String.Format("{0:dddd, MMMM d, yyyy}", @query.CreatedDate)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>







    </div>
</div>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script>

    $( document ).ready(function() {
        var table = $('#datatable').DataTable({
            "pagingType": "full_numbers",
            order: [
                    [0, 'desc']
            ]
        });
    });

</script>